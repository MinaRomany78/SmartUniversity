@model IEnumerable<Entities.Models.UniversityCourse>

@{
    ViewData["Title"] = "Available Courses";
}

<h2>Available Courses</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>@Html.DisplayNameFor(model => model.First().CreditHours)</th>
            <th>@Html.DisplayNameFor(model => model.First().Term)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.CreditHours</td>
                <td>@course.Term</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-info btn-sm">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
