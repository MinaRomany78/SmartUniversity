@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}
@model IEnumerable<Entities.Models.OptionalCourse>

<!-- Hero Section -->
<section class="hero py-5">
    <div class="container">
        <div class="row align-items-center">
            <!-- Text -->
            <div class="col-md-6 mb-5 mb-md-0">
                <div class="badge bg-success text-white px-3 py-2 rounded-pill mb-3 shadow-sm">
                    🎉 GET 30% OFF ON FIRST ENROLL
                </div>
                <h1 class="display-4 fw-bold mb-3 text-gradient">
                    Learn Engineering <br> From Top Experts
                </h1>
                <p class="lead text-muted mb-4">
                    Build skills with our courses and mentors from world-class companies.
                    Join a vibrant community and start your journey today!
                </p>
                <div class="input-group mb-4 shadow">
                    <input type="text" class="form-control p-3 border-0" placeholder="Search engineering courses...">
                    <button class="btn btn-primary px-4">Search</button>
                </div>
                <!-- Features -->
                <div class="d-flex flex-wrap gap-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-primary fs-5 me-2"></i>
                        <span>Flexible Schedules</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-primary fs-5 me-2"></i>
                        <span>Guided Learning Paths</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle text-primary fs-5 me-2"></i>
                        <span>Peer Support Community</span>
                    </div>
                </div>
            </div>

            <!-- Image -->
            <div class="col-md-6 text-center">
                <img src="~/images/mahila.png" alt="Hero Image" class="img-fluid floating" style="max-height: 420px;">
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section text-center my-5 py-5">
    <div class="container">
        <h2 class="cta-title fw-bold mb-3">🚀 Start Your Learning Journey Today</h2>
        <p class="lead mb-4">Join thousands of students who are advancing their careers with our courses.</p>
        <a href="/Courses" class="cta-btn shadow-lg">Get Started Now</a>
    </div>
</section>

<!-- Courses Section -->
<div class="container py-5">
    <h2 class="fw-bold mb-4 text-center">📚 Available Courses</h2>

    <div class="row g-4">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card course-card shadow-lg border-0 h-100 rounded-4 overflow-hidden">
                    <!-- صورة الكورس -->
                    <div class="card-img-container">
                        <img src="~/images/@course.MainImg" class="card-img-top" alt="@course.Name">
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold text-dark">@course.Name</h5>

                        <p class="card-text text-muted mb-2">
                            <i class="fas fa-user-tie me-2 text-secondary"></i>
                            Instructor: <strong>@course.Instructor?.ApplicationUser?.FullName</strong>
                        </p>

                        <p class="card-text text-muted mb-2">
                            <i class="fas fa-sticky-note me-2 text-secondary"></i>
                            <span>@course.Description</span>
                        </p>

                        <p class="card-text text-muted mb-3">
                            <i class="fas fa-dollar-sign me-2 text-success"></i>
                            Price: <strong>@course.Price.ToString("C")</strong>
                        </p>

                        <div class="mt-auto">
                            <a href="@Url.Action("Details", "ExternalStudent", new { id = course.Id, area = "Customer" })"
                               class="btn btn-gradient w-100 fw-semibold rounded-pill">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Courses Count Section -->
    <section class="courses-count-section mt-5">
        <div class="container">
            <h2 class="section-title">Available Courses</h2>
            <div class="courses-count">120+</div>
            <p class="section-subtitle">Across different faculties and departments</p>
            <a href="#" class="btn btn-primary btn-lg">Browse All Courses</a>
        </div>
    </section>
</div>

@section Scripts {
    <style>
        /* Gradient Title */
        .text-gradient {
            background: linear-gradient(to right, var(--primary), var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Floating Animation for Image */
        .floating {
            animation: float 4s ease-in-out infinite;
        }

        /* CTA Section */
        .cta-section {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border-radius: 20px;
        }

        .cta-btn {
            background: white;
            color: var(--primary);
            padding: 15px 40px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            border: none;
            transition: 0.3s;
        }

        .cta-btn:hover {
            background: var(--accent);
            color: white;
            transform: translateY(-3px);
        }

        /* Course Cards */
        .course-card {
            transition: all 0.3s ease-in-out;
            border-radius: 1.2rem;
            overflow: hidden;
        }

        .course-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .card-img-container {
            height: 200px;
            overflow: hidden;
        }

        .card-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: 0.4s;
        }

        .course-card:hover .card-img-container img {
            transform: scale(1.08);
        }

        .btn-gradient {
            background: linear-gradient(to right, var(--primary), var(--accent));
            color: white;
            border: none;
            padding: 12px;
            font-size: 1rem;
            transition: 0.3s;
        }

        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        /* Courses Count Section */
        .courses-count-section {
            background-color: #f8f9fa;
            padding: 80px 0;
            text-align: center;
            border-radius: 20px;
        }

        .courses-count {
            font-size: 4rem;
            font-weight: 800;
            color: var(--primary-color);
            margin-bottom: 10px;
        }
    </style>
}

