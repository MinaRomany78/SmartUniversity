@using Entities.ViewModel
@model ChangePasswordProfileVM
@{
    ViewData["Title"] = "Change Password";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0 rounded-4 p-4"
         style="width: 500px; background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(12px);">
        <h3 class="text-center fw-bold mb-3">🔒 Change Password</h3>
        <form asp-action="ChPassword" method="post">

            <div class="mb-3">
                <label asp-for="CurrentPassword" class="form-label"></label>
                <input asp-for="CurrentPassword" type="password" class="form-control rounded-pill" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control rounded-pill" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-warning w-100 rounded-pill shadow">
                <i class="bi bi-shield-lock"></i> Update Password
            </button>
        </form>
    </div>
</div>
