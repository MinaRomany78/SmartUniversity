@model IEnumerable<OptionalCourse>
@{
    ViewData["Title"] = "Manage Optional Courses";
}


<style>
    .dashboard-table {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
    }

        .dashboard-table thead {
            background: linear-gradient(45deg, #0d6efd, #0b5ed7);
            color: white;
            font-weight: 600;
            text-transform: uppercase;
        }

        .dashboard-table tbody tr {
            transition: all 0.2s ease-in-out;
        }

            .dashboard-table tbody tr:hover {
                background-color: #f8f9fa;
                transform: scale(1.01);
            }

        .dashboard-table td,
        .dashboard-table th {
            padding: 14px 16px;
            vertical-align: middle;
        }

    .table-actions .btn {
        border-radius: 8px;
        padding: 6px 10px;
    }

    .search-box {
        margin-bottom: 16px;
        max-width: 300px;
    }

</style>

<div class="mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <input id="optionalCourseSearch" type="text" class="form-control search-box" placeholder="🔍 Search optional courses..." />
        <a href="@Url.Action("Create", "OptionalCourse", new { area = "Admin" })" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add OCourse
        </a>
    </div>

    <div class="table-responsive dashboard-table">
        <table class="table align-middle text-center mb-0" id="optionalCourseTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Instructor</th>
                    <th>Price</th>
                    <th>Promo Code</th>
                    <th>Available for University Students</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td class="fw-bold">@course.Name</td>
                        <td>@course.Instructor?.ApplicationUser?.FullName</td>
                        <td>@course.Price.ToString("C")</td>
                        <td>@course.PromoCodeEntity?.Code</td>
                        <td>
                            @if (course.IsAvailableForUniversityStudents)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td class="table-actions">
                            <a href="@Url.Action("Edit", "OptionalCourse", new { id = course.Id, area = "Admin" })"
                               class="btn btn-warning btn-sm me-1" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="#"
                               data-delete-url="@Url.Action("Delete", "OptionalCourse", new { id = course.Id, area = "Admin" })"
                               class="btn btn-danger btn-sm btn-delete" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Pagination *@
    <nav aria-label="OptionalCourse pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= (int)ViewBag.totalPages; i++)
            {
                <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "OptionalCourse", new { area = "Admin", page = i })">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(function () {
            @* Success Message *@
            @if (TempData["success-notification"] != null)
            {
                                <text>
                                    toastr.success('@TempData["success-notification"]');
                                </text>
            }

            @* Error Message *@
            @if (TempData["error-notification"] != null)
            {
                                <text>
                                    toastr.error('@TempData["error-notification"]');
                                </text>
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Search filter
            const searchInput = document.getElementById('optionalCourseSearch');
            if (searchInput) {
                searchInput.addEventListener('keyup', function () {
                    const searchText = this.value.toLowerCase();
                    const rows = document.querySelectorAll('#optionalCourseTable tbody tr');
                    rows.forEach(row => {
                        row.style.display = row.textContent.toLowerCase().includes(searchText) ? '' : 'none';
                    });
                });
            }

            // Delete confirmation
            document.addEventListener("click", function (e) {
                const target = e.target.closest(".btn-delete");
                if (!target) return;

                e.preventDefault();
                const deleteUrl = target.getAttribute("data-delete-url");

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = deleteUrl;
                    }
                });
            });
        });
    </script>
}
