@model SupportTicket
@{
    ViewData["Title"] = "Reply to Ticket";
}

<style>
    .reply-card {
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 24px;
        background: #fff;
    }

    .reply-header {
        background: linear-gradient(45deg, #0d6efd, #0b5ed7);
        color: white;
        border-radius: 12px 12px 0 0;
        padding: 16px;
        font-size: 1.2rem;
        font-weight: 600;
    }
</style>

<div class="reply-card mt-4">
    <div class="reply-header">
        Reply to Ticket #@Model.Id
    </div>
    <div class="mt-3">
        <p><strong>From:</strong> @Model.SenderName (@Model.SenderEmail)</p>
        <p><strong>Issue:</strong> @Model.IssueDescription</p>
    </div>

    <form asp-action="Reply" asp-route-id="@Model.Id" method="post">
        <div class="mb-3">
            <label for="adminResponse" class="form-label">Your Response</label>
            <textarea id="adminResponse" name="adminResponse" class="form-control" rows="6" required></textarea>
        </div>
        <button type="submit" class="btn btn-success">Send Reply</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>