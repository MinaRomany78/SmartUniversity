@model SupportTicket
@{
    ViewData["Title"] = "Ticket Details";
}

<style>
    .ticket-card {
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        padding: 24px;
        background: #fff;
    }

    .ticket-header {
        background: linear-gradient(45deg, #0d6efd, #0b5ed7);
        color: white;
        border-radius: 12px 12px 0 0;
        padding: 16px;
        font-size: 1.2rem;
        font-weight: 600;
    }

    .ticket-body dt {
        font-weight: bold;
        color: #0d6efd;
    }
</style>

<div class="ticket-card mt-4">
    <div class="ticket-header">
        Ticket #@Model.Id
    </div>
    <div class="ticket-body mt-3">
        <dl class="row">
            <dt class="col-sm-3">From</dt>
            <dd class="col-sm-9">@Model.SenderName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.SenderEmail</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.IssueDescription</dd>

            <dt class="col-sm-3">Priority</dt>
            <dd class="col-sm-9">@Model.Priority</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Created At</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("f")</dd>

            @if (!string.IsNullOrEmpty(Model.AdminResponse))
            {
                <dt class="col-sm-3">Admin Response</dt>
                <dd class="col-sm-9 text-success">@Model.AdminResponse</dd>
            }
        </dl>
    </div>
    <div class="mt-3">
        <a asp-action="Reply" asp-route-id="@Model.Id" class="btn btn-primary">Reply</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>

