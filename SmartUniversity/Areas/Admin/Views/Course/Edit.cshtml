@model Entities.Models.UniversityCourse

@{
    ViewData["Title"] = "Edit Course";
}

<h2>Edit Course</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CreditHours" class="control-label"></label>
        <input asp-for="CreditHours" class="form-control" type="number" />
        <span asp-validation-for="CreditHours" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Term" class="control-label"></label>
        <input asp-for="Term" class="form-control" />
        <span asp-validation-for="Term" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>
