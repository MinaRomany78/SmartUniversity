@model Entities.ViewModel.ForgetPasswordVM

@{
    ViewData["Title"] = "Forgot Password";
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 1.5rem;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .form-control {
        border-radius: .75rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(58, 12, 163, 0.25);
            border-color: #3a0ca3;
        }

    .btn-gradient {
        background: linear-gradient(135deg, #3a0ca3, #560bad);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #560bad, #3a0ca3);
            transform: translateY(-2px);
        }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="glass-card p-5 text-center" style="max-width: 480px; width: 100%;">

        <!-- أيقونة -->
        <i class="fas fa-unlock-alt fa-2x mb-3 text-primary"></i>

        <!-- العنوان -->
        <h3 class="fw-bold">Forgot Password</h3>
        <p class="text-muted mb-4">Enter your email or username to receive an OTP</p>

        <!-- عرض الأخطاء -->
        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

        <!-- الفورم -->
        <form asp-action="ForgetPassword" method="post" id="forgetPasswordForm">

            <div class="form-floating mb-3">
                <input asp-for="EmailORUserName" type="text" class="form-control" placeholder=" " required />
                <label asp-for="EmailORUserName">Email or Username</label>
                <span asp-validation-for="EmailORUserName" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-gradient btn-lg text-white rounded-pill shadow">
                    <i class="fas fa-paper-plane me-2"></i> Send OTP
                </button>
            </div>

            <div class="text-center">
                <a asp-action="Login" class="text-decoration-none">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('forgetPasswordForm').addEventListener('submit', function () {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status"></span> Sending...';
        });

        @if (TempData["success-notification"] != null)
        {
                <text>toastr.success('@TempData["success-notification"]');</text>
        }
        @if (TempData["error-notification"] != null)
        {
                <text>toastr.error('@TempData["error-notification"]');</text>
        }
    </script>
}
