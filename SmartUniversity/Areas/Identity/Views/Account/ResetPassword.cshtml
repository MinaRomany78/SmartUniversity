@model Entities.ViewModel.ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password - OTP";
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 1.5rem;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .form-control {
        border-radius: .75rem;
        transition: all 0.3s ease;
        font-size: 1.2rem;
        text-align: center;
        letter-spacing: 0.3rem;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(58, 12, 163, 0.25);
            border-color: #3a0ca3;
        }

    .btn-gradient {
        background: linear-gradient(135deg, #3a0ca3, #560bad);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #560bad, #3a0ca3);
            transform: translateY(-2px);
        }
</style>

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="glass-card p-5 text-center" style="max-width: 480px; width: 100%;">

        <!-- أيقونة -->
        <i class="fas fa-key fa-2x mb-3 text-primary"></i>

        <!-- العنوان -->
        <h3 class="fw-bold">Enter OTP Code</h3>
        <p class="text-muted mb-4">Check your email for the 4-digit code</p>

        <!-- عرض الأخطاء -->
        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

        <!-- الفورم -->
        <form asp-action="ResetPassword" method="post" id="otpForm">
            <input type="hidden" asp-for="UserId" />

            <div class="form-floating mb-4">
                <input asp-for="Otp" type="text" maxlength="4" class="form-control" placeholder=" " required />
                <label asp-for="Otp">OTP Code</label>
                <span asp-validation-for="Otp" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-gradient btn-lg text-white rounded-pill shadow">
                    <i class="fas fa-check-circle me-2"></i> Verify OTP
                </button>
            </div>

            <div class="text-center">
                <a asp-action="Login" class="text-decoration-none">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('otpForm').addEventListener('submit', function () {
            const btn = this.querySelector('button[type="submit"]');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Verifying...';
        });

        @if (TempData["error-notification"] != null)
        {
                    <text>toastr.error('@TempData["error-notification"]');</text>
        }
    </script>
}
