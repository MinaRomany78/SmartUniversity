@model Entities.ViewModel.ResendEmailConfirmationVM
@{
    ViewData["Title"] = "Resend Email Confirmation";
}

<style>
    .card {
        border-radius: 1rem;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #3a0ca3, #560bad);
    }

    .form-control {
        border-radius: .5rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(58, 12, 163, 0.25);
            border-color: #3a0ca3;
        }

    .btn-gradient {
        background: linear-gradient(135deg, #3a0ca3, #560bad);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(135deg, #560bad, #3a0ca3);
            transform: translateY(-1px);
        }

    .back-link {
        color: #3a0ca3;
        transition: all 0.3s ease;
    }

        .back-link:hover {
            color: #560bad;
            text-decoration: underline;
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white p-4 text-center">
                    <i class="fas fa-envelope fa-2x mb-2"></i>
                    <h3 class="fw-bold mb-0">Resend Confirmation Email</h3>
                    <small class="opacity-75">We'll send you a new confirmation link</small>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ResendEmailConfirmation" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="EmailORUserName" class="form-control" placeholder=" " required />
                            <label asp-for="EmailORUserName">Email or Username</label>
                            <span asp-validation-for="EmailORUserName" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-gradient btn-lg text-white rounded-pill shadow">
                                <i class="fas fa-paper-plane me-2"></i> Send
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center py-3">
                    <a asp-action="Login" class="fw-bold back-link">
                        <i class="fas fa-arrow-left me-1"></i> Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
