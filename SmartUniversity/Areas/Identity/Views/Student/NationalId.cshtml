@{
    ViewData["Title"] = "Student Portal Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="glass-card p-5 my-5">
                <div class="text-center mb-4">
                    <img src="~/images/Logo1.png" alt="Student Portal" style="height: 70px;" class="mb-3">
                    <h2>Student Portal Login</h2>
                    <p class="text-muted">Enter your national ID to access your account</p>
                </div>

                <!-- الفورم مربوط بالأكشن NationalId -->
                <form asp-action="NationalId" asp-controller="Student" asp-area="Identity" method="post">
                    <div class="mb-4">
                        <label for="nationalId" class="form-label">National ID Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            <input type="text" class="form-control" id="nationalId" name="nationalId"
                                   placeholder="Enter your 14-digit national ID"
                                   pattern="\d{14}"
                                   title="Please enter exactly 14 digits"
                                   required>
                        </div>
                        <div class="form-text">Your national ID must be exactly 14 digits</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg" id="loginBtn">
                            <i class="fas fa-sign-in-alt me-2"></i> Send Personal  Information
                        </button>
                        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Back
                        </a>
                    </div>
                </form>

                <div class="mt-4 pt-3 border-top text-center">
                    <p>Aready Know Personal Data? <a asp-area="Identity" asp-controller="Account" asp-action="Login">Loginhere</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
