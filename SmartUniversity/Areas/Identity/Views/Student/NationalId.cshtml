<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="glass-card p-5 my-5">
                <div class="text-center mb-4">
                    <img src="~/images/Logo1.png" alt="Student Portal" style="height: 70px;" class="mb-3">
                    <h2>Student Portal Login</h2>
                    <p class="text-muted">Enter your national ID to access your account</p>
                </div>

                <form id="studentLoginForm">
                    <div class="mb-4">
                        <label for="nationalId" class="form-label">National ID Number</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            <input type="text" class="form-control" id="nationalId"
                                   placeholder="Enter your 14-digit national ID"
                                   pattern="\d{14}"
                                   title="Please enter exactly 14 digits"
                                   required>
                        </div>
                        <div class="form-text">Your national ID must be exactly 14 digits</div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg" id="loginBtn">
                            <i class="fas fa-sign-in-alt me-2"></i> Login
                        </button>
                        <button type="button" class="btn btn-outline-secondary" onclick="navigateWithLoading('home.html')">
                            <i class="fas fa-arrow-left me-2"></i> Back
                        </button>
                    </div>
                </form>

                <div class="mt-4 pt-3 border-top text-center">
                    <p>New student? <a href="#" onclick="navigateWithLoading('student-register.html')">Register here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const nationalId = document.getElementById('nationalId');

        document.getElementById('studentLoginForm').addEventListener('submit', function (e) {
            e.preventDefault();

            // Simulate login validation
            const id = nationalId.value;
            if (id === '29901010001234') {
                navigateWithLoading('student-dashboard.html');
            } else {
                alert('Invalid National ID');
            }
        });
    });

    function navigateWithLoading(url) {
        // Optional: Show loading indicator
        window.location.href = url;
    }
</script>
